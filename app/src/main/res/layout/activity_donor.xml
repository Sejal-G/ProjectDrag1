<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donor"
    tools:layout_editor_absoluteY="81dp"
    >

    <Button
        android:id="@+id/id_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="284dp"
        android:text="Profile"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="447dp" />


    <EditText
        android:id="@+id/id_searchbar"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textSize="26dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/id_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="176dp"
        android:text="Event" />

    <RadioGroup
        android:id="@+id/id_radiogroup"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_above="@+id/id_searchbar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="-62dp">

        <RadioButton
            android:id="@+id/id_radiosso"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:onClick="Client"
            android:text="SSO" />

        <RadioButton
            android:id="@+id/id_radiodonor"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:onClick="Client"
            android:text="DONOR"

            />

    </RadioGroup>


</RelativeLayout>